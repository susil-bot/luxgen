# =============================================================================
# TRAINER PLATFORM - MULTI-TENANCY ENVIRONMENT CONFIGURATION
# =============================================================================

# Application Settings
NODE_ENV=production
PORT=3001
APP_NAME=Trainer Platform
APP_VERSION=1.0.0

# Frontend API Configuration
REACT_APP_API_BASE_URL=http://192.168.1.9:3001/api/v1
REACT_APP_API_HEALTH_URL=http://192.168.1.9:3001/health
REACT_APP_API_DOCS_URL=http://192.168.1.9:3001/docs

# Database Configuration
# PostgreSQL - Primary Database
DATABASE_URL=postgresql://trainer_user:trainer_password_2024@postgres:5432/trainer_platform
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=trainer_platform
POSTGRES_USER=trainer_user
POSTGRES_PASSWORD=trainer_password_2024

# Redis Configuration
REDIS_URL=redis://:redis_password_2024@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_2024

# MongoDB Configuration (Alternative/Additional)
MONGODB_URL=mongodb://trainer_admin:mongo_password_2024@mongodb:27017/trainer_platform?authSource=admin
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DB=trainer_platform
MONGODB_USER=trainer_admin
MONGODB_PASSWORD=mongo_password_2024

# Multi-Tenancy Configuration
TENANT_ISOLATION_STRATEGY=database_per_tenant
# Options: database_per_tenant, schema_per_tenant, row_level_security
TENANT_DEFAULT_SCHEMA=tenant_default
TENANT_MANAGEMENT_SCHEMA=tenant_management

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_here_2024_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Session Management
SESSION_SECRET=your_session_secret_here_2024_change_in_production
SESSION_STORE=redis
SESSION_TTL=86400

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# File Upload & Storage
UPLOAD_MAX_SIZE=50MB
STORAGE_PROVIDER=local
# Options: local, s3, azure, gcp
STORAGE_PATH=/app/uploads
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Email Configuration
EMAIL_PROVIDER=smtp
# Options: smtp, sendgrid, mailgun, ses
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@trainerplatform.com

# AI Assistant Configuration
AI_PROVIDER=openai
# Options: openai, anthropic, local
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Monitoring & Logging
LOG_LEVEL=info
# Options: error, warn, info, debug
LOG_FORMAT=json
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_PAYLOAD_SIZE=16KB

# Feature Flags
ENABLE_AI_ASSISTANT=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_MULTI_TENANCY=true
ENABLE_SSO=false

# Development & Testing
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=false
NODE_ENV=development

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/app/backups

# Performance & Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
ENABLE_COMPRESSION=true
ENABLE_HTTP2=true

# Security Headers
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_XSS_PROTECTION=true
ENABLE_CONTENT_TYPE_NOSNIFF=true

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Redis Connection Pool
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10
REDIS_POOL_ACQUIRE=30000
REDIS_POOL_IDLE=10000 